    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es2018",
      "dom"
    ],
    "removeComments": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "."
